// CHECK-LABEL: define i32 @hasVar(i32 %0, i32 %1)
@no_mangling func hasVar(a: Int, b: Int) -> Int {
    // CHECK: #dbg_declare(ptr %{{[0-9]+}}, ![[VAR_A:[0-9]+]], !DIExpression(), ![[LOC_A:[0-9]+]])
    // CHECK: #dbg_declare(ptr %{{[0-9]+}}, ![[VAR_B:[0-9]+]], !DIExpression(), ![[LOC_B:[0-9]+]])
    return a + b;
}
// CHECK-LABEL: define i32 @hasLocal
@no_mangling func hasLocal() -> Int {
    let x = 10;
    let y = 20;
    // CHECK: #dbg_declare(ptr %{{[0-9]+}}, ![[VAR_X:[0-9]+]], !DIExpression(), ![[LOC_X:[0-9]+]])
    // CHECK: #dbg_declare(ptr %{{[0-9]+}}, ![[VAR_Y:[0-9]+]], !DIExpression(), ![[LOC_Y:[0-9]+]])
    return x * y;
}


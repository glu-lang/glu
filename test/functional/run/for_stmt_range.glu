//
// RUN: gluc %s -o %t && %t | FileCheck -v %s
//

func main() {
    var total: Int32 = 0;
    for value in 0...4 {
        total = total + value;
    }
    // CHECK: 10
    std::print(total);

    var breaker: Int32 = -1;
    let target: Int32 = 3;
    for value in 0...5 {
        let current: Int32 = value;
        if current == target {
            breaker = current;
            break;
        }
    }
    // CHECK: 3
    std::print(breaker);

    var hits: Int32 = 0;
    let skip: Int32 = 2;
    let increment: Int32 = 1;
    for value in 0...4 {
        let current: Int32 = value;
        if current == skip {
            continue;
        }
        hits = hits + increment;
    }
    // CHECK: 4
    std::print(hits);

    for i in 0..<10 {
        let j = i + 1;
        if j == 5 {
            // CHECK: 5
            std::print(j);
        }
    }
}

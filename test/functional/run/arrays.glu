//
// RUN: gluc %s -o %t && %t | FileCheck -v %s
//

func sum(arr: *Int, size: UInt) -> Int {
    var total: Int = 0;
    var i: UInt = 0;
    while (i < size) {
        total = total + arr[i];
        i = i + 1;
    }
    return total;
}

func main() {
    var x: Int[3] = { -1, 42, 100 };
    // CHECK: -1
    std::print(sum(x, 1));
    // CHECK: 41
    std::print(sum(x, 2));
    // CHECK: 141
    std::print(sum(x, 3));
    // CHECK: 142
    std::print(sum(&x[1], 2));
    x[1] = 23;
    // CHECK: 122
    std::print(sum(x, 3));
}
